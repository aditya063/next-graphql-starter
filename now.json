{
  "name": "next-graphql-starter",
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@now/node-server"
    },
    {
      "src": "frontend/next.config.js",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "backend/src/index.js"
    },
    {
      "src": "^/service-worker.js$",
      "dest": "frontend/_next/static/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=43200, immutable",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "DEV_GRAPHQL_ENDPOINT": "@dev_graphql_endpoint",
    "PROD_GRAPHQL_ENDPOINT": "@prod_graphql_endpoint",
    "PORT": "@port",
    "DEV_FRONTEND_URL": "@dev_frontend_url",
    "PROD_FRONTEND_URL": "@prod_frontend_url",
    "JWT_SECRET": "@jwt_secret",
    "PRISMA_ENDPOINT": "@prisma_endpoint",
    "PRISMA_SECRET": "@prisma_secret",
    "PRISMA_MANAGEMENT_API_SECRET": "",
    "MAIL_HOST": "@mail_host",
    "MAIL_PORT": "@mail_port",
    "MAIL_USER": "@mail_user",
    "MAIL_PASS": "@mail_pass"
  }
}
